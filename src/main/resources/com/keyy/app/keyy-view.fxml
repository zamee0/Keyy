<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="rootVBox"
      alignment="TOP_CENTER"
      spacing="40"
      prefWidth="1000"
      prefHeight="700"
      style="-fx-background-color: #f5f7fa; -fx-padding: 40;"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.keyy.app.KeyyController">

    <!-- Dark mode button -->
    <HBox alignment="CENTER_RIGHT">
        <Button fx:id="darkModeBtn" focusTraversable="false"
                style="-fx-font-size: 18px; -fx-background-color: transparent; -fx-border-color: transparent;"
                text="ðŸŒ™" />
    </HBox>

    <!-- Typing area -->
    <VBox fx:id="typingContainer" alignment="CENTER" spacing="40" VBox.vgrow="ALWAYS">
        <HBox alignment="CENTER">
            <Label fx:id="timerLabel"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #e2b714;"
                   text="0" />
        </HBox>

        <TextFlow fx:id="textFlow"
                  lineSpacing="8"
                  prefWidth="800"
                  style="-fx-padding: 20;"
                  textAlignment="LEFT" />
    </VBox>

</VBox>